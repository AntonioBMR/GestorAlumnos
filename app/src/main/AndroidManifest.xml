<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antonio.android.gestoralumnos" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logozaidin"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:icon="@drawable/logozaidin"
            android:screenOrientation="locked"
            android:name="com.antonio.android.gestoralumnos.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:icon="@drawable/logozaidin"
            android:screenOrientation="locked"
            android:name="com.antonio.android.gestoralumnos.Secundaria"
            android:label="Agregar actividades" >
        </activity>
        <activity
            android:icon="@drawable/logozaidin"
            android:screenOrientation="locked"
            android:name="com.antonio.android.gestoralumnos.ActDetalle"
            android:label="Detalle actividad" >
        </activity>
        <activity
            android:icon="@drawable/logozaidin"
            android:screenOrientation="locked"
            android:name="com.antonio.android.gestoralumnos.ActividadesProfesores"
            android:label="@string/title_activity_actividades_profesores" >
        </activity>
        <activity
            android:icon="@drawable/logozaidin"
            android:screenOrientation="locked"
            android:name="com.antonio.android.gestoralumnos.Editar"
            android:label="@string/title_activity_editar" >
        </activity>
    </application>

</manifest>
